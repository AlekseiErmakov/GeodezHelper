<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/md_keylines"
    android:layout_marginLeft="@dimen/md_keylines"
    android:layout_marginRight="@dimen/md_keylines"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <ImageView android:layout_height="@dimen/card_image_height"
        android:layout_width="match_parent"
        android:id="@+id/card_image"
        tools:src="@drawable/a"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_height="@dimen/card_title_height"
        android:layout_width="match_parent"
        android:id="@+id/card_title"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:text="@string/item_title"
        android:layout_alignBottom="@+id/card_image"/>

    <TextView android:layout_marginRight="@dimen/md_keylines"
        android:layout_marginLeft="@dimen/md_keylines"
        android:layout_marginBottom="@dimen/md_keylines"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/card_text"
        android:textColor="@color/dark_grey"
        tools:text="@string/item_desc"
        android:textSize="@dimen/article_subheading"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/md_keylines"
        android:layout_below="@+id/card_image"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/action_button"
        android:textColor="?attr/colorPrimary"
        android:text="Action"
        android:layout_below="@+id/card_text"
        style="?android:attr/borderlessButtonStyle"/>

    <ImageButton android:layout_marginRight="@dimen/md_keylines"
        android:layout_height="@dimen/cards_button_height"
        android:layout_width="@dimen/cards_button_width"
        android:id="@+id/share_button"
        android:layout_below="@+id/card_text"
        style="?android:attr/borderlessButtonStyle"
        android:tint="@color/button_grey"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/a_avator"/>

    <ImageButton android:layout_marginRight="@dimen/md_keylines"
        android:layout_height="@dimen/cards_button_height"
        android:layout_width="@dimen/cards_button_width"
        android:id="@+id/favorite_button"
        android:layout_below="@+id/card_text"
        style="?android:attr/borderlessButtonStyle"
        android:tint="@color/button_grey"
        app:srcCompat="@drawable/a"
        android:layout_toLeftOf="@id/share_button"/>

</RelativeLayout>
</androidx.cardview.widget.CardView>
